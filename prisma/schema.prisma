datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
 
model post{ 
   id       String @id @default(auto()) @map("_id") @db.ObjectId
   location  Float
   quate     String?
   status    Status @default(waiting)
   author    user      @relation(fields: [authorId], references: [id])
   authorId String    @db.ObjectId
}

model user {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  password String
  firstname String
  lastname String
  post      post[]
  profile   profile[]
}

model profile {
   id       String @id @default(auto()) @map("_id") @db.ObjectId
   user     Json
   author   user      @relation(fields: [authorId], references: [id])
   authorId String    @db.ObjectId
}

enum Status{
  waiting
  panding
  done
}