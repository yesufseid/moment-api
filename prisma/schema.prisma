generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model user {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  password String
  profile  profile[]
  posts    post[]
}



model post {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  location Float
  quate    String?
  status    String @default("waiting")
   author   user      @relation(fields: [authorId], references: [id])
  authorId String    @db.ObjectId
}

model profile {
  id    String   @id @default(auto()) @map("_id") @db.ObjectId
  user  Json?
  author   user      @relation(fields: [authorId], references: [id])
  authorId String    @db.ObjectId
} 
